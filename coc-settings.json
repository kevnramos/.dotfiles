{
    "suggest.autoTrigger": "none",
    "diagnostic-languageserver.linters": {},
    "diagnostic-languageserver.filetypes": {
        "vim": "vint",
        "sh": "shellcheck",
        "python": "pylint"
    },
    "diagnostic-languageserver.formatters": {
        "shfmt": {
            "command": "shfmt",
            "args": [
                "-i",
                "4",
                "-filename",
                "%filepath"
            ]
        },
        "docformatter": {
            "command": "docformatter",
            "args": [
                "-"
            ]
        },
        "autopep8": {
            "command": "autopep8",
            "args": [
                "-aa",
                "-"
            ]
        }
    },
    "diagnostic-languageserver.formatFiletypes": {
        "sh": "shfmt",
        "python": [
            "autopep8",
            "isort",
            "docformatter"
        ]
    }
}
